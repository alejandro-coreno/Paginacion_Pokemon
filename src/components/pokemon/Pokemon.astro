---
    interface Props {
        name: string;
        url: string;
        isBig?: boolean;
    }

    const {name, url, isBig = false } = Astro.props;

    const id = url.split('/').at(-2);

    const srcImage = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`


---


<!-- Estilo condicionados solo cuando sea false ocupamos el class:list -->
<a  href={`/pokemons/${name}`}
    class:list={[
        `rounded flex flex-col w- justify-center items-center p-2`,
        { border: !isBig}
        
    ]}
    >
    <img 
        transition:name=`${name}-image`
        class:list={[
            {
                'w-26 h-26 ': isBig,
                'w-22 h-22': !isBig 
            }
        ]} 
        src={srcImage} 
        alt={name}
    >
    <span class:list={[
        'capitalize',
        {
            'text-3xl text-blue-300': isBig
        }
    ]}> #{id} {name}</span>
</a>