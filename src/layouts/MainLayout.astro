---
import { ViewTransitions } from 'astro:transitions';
import {siteInfo }from "src/const/site-info";

// agregamos la props de image y description para cada pagina de cada pokemon , para poder mostrar los meta datos de la pagina
interface Props {
    title?: string;
    image?: string;
    description?: string
}
const { title = siteInfo.title, description = siteInfo.descripcion, image  } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- SEO -->
    <meta name="description" content={ description}>
    <meta name="author" content={"Josue Alejandro"}>

    <!-- OG Metatags -->
     <meta property="og:title" content={title}>
     <meta property="og:description" content={description}>
     <meta property="og:image" content={image}>
    <title>{ title }</title>
    <ViewTransitions />
</head>
<body class="bg-slate-800 text-slate-100 m-auto max-w-3xl ">
    <main class="mt-3">
        <slot />
    </main>
</body>
</html>